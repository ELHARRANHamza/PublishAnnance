<!--   Weekly2-News start -->
<div class="weekly2-news-area  weekly2-pading gray-bg">
    <div class="container">
        <div class="weekly2-wrapper">
            <!-- section Tittle -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-tittle mb-30">
                        <h3>Latests News</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="weekly2-news-active dot-style d-flex dot-style">
                        @foreach (var item in Model.news)
                        {
                        <div class="weekly2-single">
                            <div class="weekly2-img">
                                <img src="~/Image_News/@item.Image" alt="" style="height:300px">
                            </div>
                            <div class="weekly2-caption">
                                <span class="color1">@item.Titre</span>
                                <p>@item.date_Publiciter.ToLongDateString()</p>
                                <h4>@item.Description.Substring(0, 40) <a href="/Affichage_Latests_News/Details/@item.id" class="genric-btn link">Read More ></a></h4>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
