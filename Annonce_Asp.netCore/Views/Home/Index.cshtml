                    <img src="~/assets/img/team/2.png" alt="">
                    <div class="trend-top-cap">
                        <span>Administrator</span>
                        <h2><a href="details.html">
    Welcome to the best site to post a media ad
    <br>With everyone’s testimony.
</a></h2>
                    </div>
                </div>
            </div>
            <!-- Trending Bottom -->
            <div class="trending-bottom">
                <div class="row">
                    @foreach (var item in Model.GetCategories)
                    {
                        <div class="col-lg-4">
                            <div class="single-bottom mb-35">
                                <div class="trend-bottom-img mb-30">
                                    <img src="~/Image_Cat/@item.Image" style="height:270px;width:300px" alt="">
                                </div>
                                <div class="trend-bottom-cap">
                                    <span class="color1">@item.nom_Cat</span>
                                    <h4><a href="/Home/Details_Cat/@item.id">Get the Illusion of Fuller Lashes by “@item.nom_Cat.”</a></h4>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- Riht content -->
        <div class="col-lg-4">
            @foreach (var item in Model.GetCategories)
            {
                <div class="trand-right-single d-flex">
                    <div class="trand-right-img">
                        <img src="~/Image_Cat/@item.Image" style="width:140px;height:120px" alt="">
                    </div>
                    <div class="trand-right-cap">
                        <span class="color1">@item.nom_Cat</span>
                        <h4><a href="/Home/Details_Cat/@item.id" class="genric-btn link">Details >></a></h4>
                    </div>
                </div>

            }
            </div>
    </div>
</div>

<!-- Trending Area End -->

