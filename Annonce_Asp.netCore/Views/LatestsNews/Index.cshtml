@model IEnumerable<Annonce_Asp.netCore.Models.Latest_News>

@{
    ViewData["Title"] = "Index";
}

<h1 class="h3 mb-2 text-gray-800">Latests News</h1>
<p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"><a asp-action="Create" class="btn btn-primary">Create New</a></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>vidéo</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Date Publicité</th>
                        <th>Mettre a jour</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Vidéo</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Date Publicité</th>
                        <th>Mettre a jour</th>
                    </tr>
                </tfoot>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            
                            <td>
                                <iframe src="@item.url" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Titre)
                            </td>
                            <td>
                                @item.Description.Substring(0, 50)......
                            </td>
                            <td>
                                <img src="~/Image_News/@item.Image" class="img-thumbnail" style="width:100px;height:90px" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.date_Publiciter)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a> |
                                <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-warning"><i class="fas fa-eye"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

