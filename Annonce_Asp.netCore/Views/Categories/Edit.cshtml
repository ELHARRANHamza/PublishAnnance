@model Annonce_Asp.netCore.ViewModel.Create_CatViewModel

@{
    ViewData["Title"] = "Edit";
}

<h3  class="h3 mb-2 text-gray-800 alert alert-info">Are you sure you want to Edit this?</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" readonly class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nom_Cat" class="control-label"></label>
                <input asp-for="nom_Cat" class="form-control" />
                <span asp-validation-for="nom_Cat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GetFile" class="control-label"></label>
                <input type="file" asp-for="GetFile" name="GetFile" class="form-control" />
                <br/>
                <img src="~/Image_Cat/@Model.Image" style="width:150px;height:100px;" class="img-thumbnail" />
                <span asp-validation-for="GetFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
                <input asp-for="Image" hidden class="form-control" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
