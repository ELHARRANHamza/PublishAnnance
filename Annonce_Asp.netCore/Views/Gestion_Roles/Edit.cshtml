@model Annonce_Asp.netCore.ViewModel.Roles_ViewModels

@{
    ViewData["Title"] = "Edit";
}

<h3  class="h3 mb-2 text-gray-800 alert alert-info">Are you sure you want to Edit this?</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" readonly class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nom_role" class="control-label"></label>
                <input asp-for="nom_role" class="form-control" />
                <span asp-validation-for="nom_role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
            </div>
        </form>
    </div>
</div>
